<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csprep.csprep" >

    <!-- REQUEST PERMISSION TO WRITE TO FILE -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cs_prep_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- ENTRY POINT TO THE APP -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Menu Screen -->
        <activity
            android:name=".MainMenuActivity"
            android:label="Main Menu" >
        </activity>

        <!-- Exam Testing Screen -->
        <activity
            android:name=".QuestionActivity"
            android:label="Test">
        </activity>

        <!-- SettingsActivity Screen -->
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <!-- DisclaimerActivity Screen -->
        <activity
            android:name=".DisclaimerActivity"
            android:label="Disclaimer" >
        </activity>

        <!-- ResultsActivity Screen -->
        <activity
            android:name=".ResultsActivity"
            android:label="@string/title_activity_results">
        </activity>

        <!-- New Account Screen -->
        <activity
            android:name=".NewAccountActivity"
            android:label="@string/title_activity_new_account" >
        </activity>

        <!-- Cancel prompt -->
        <activity
            android:name=".CancelPrompt"
            android:label="@string/title_activity_cancel_prompt" >
        </activity>

        <!-- Debugging Screen -->
        <activity
            android:name=".DebugActivity"
            android:label="@string/title_activity_debug" >
        </activity>
    </application>

</manifest>
